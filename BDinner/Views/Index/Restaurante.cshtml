<script>
    $(document).ready(function () {
        //tooltip share
        $(".tooltip-share").click(function () {
            var opaTool = $(this).children(".tooltip-share-content");
            if (opaTool.css("opacity") == 0) {
                opaTool.css("visibility", "visible");
                opaTool.css("opacity", "1");
            } else {
                opaTool.css("visibility", "hidden");
                opaTool.css("opacity", "0");
            }
        });
        $(document).on('click', function (e) {
            var selectClick = $(e.target).parents();
            var _into = true;
            selectClick.each(function () {
                if ($(this).hasClass("tooltip-share")) {
                    _into = false;
                    return false;
                }
            });
            if (_into) {
                $('.tooltip-share-content').css("visibility", "hidden");
                $('.tooltip-share-content').css("opacity", "0");
            }
        });
        ////////////////////
        //ordenar resultados
        function orderResult() {
            //variables
            var HElemento = false, MElemento = false, rowCount = 1, marginStatus = false, maxColumn = 5, twoColumn = false;
            var mediaquery992 = window.matchMedia("(max-width:992px)"), mediaquery767 = window.matchMedia("(max-width:767px)"), sizeGal = "ele-res-4";
            //comprobacion de ancho pantalla
            if (mediaquery767.matches) {
                sizeGal = "ele-res-1";
                maxColumn = $(".ele-res").length + 1;
            } else if (mediaquery992.matches) {
                sizeGal = "ele-res-2";
                maxColumn = 3;
            } else {
                sizeGal = "ele-res-4";
                maxColumn = 5;
            }
            //alinear resultados
            //limpiar clases
            $(".ele-res").attr("class", "");
            $(".resultados > div").addClass("ele-res");
            $(".ele-res").each(function () {
                //contador de renglones
                if (rowCount == maxColumn) {
                    marginStatus = true;
                    rowCount = 1;
                    switch (HElemento) {
                        case false:
                            HElemento = true;
                            break;
                        case true:
                            HElemento = false;
                            break;
                    }
                }
                //asignacion de clases altura y ancho
                $(this).addClass(sizeGal);
                switch (HElemento) {
                    case false:
                        $(this).addClass("ele-res-lg");
                        HElemento = true;
                        break;
                    case true:
                        $(this).addClass("ele-res-sm");
                        HElemento = false;
                        break;
                }
                //asginacion de margen igualador
                if (marginStatus) {
                    if (maxColumn == 3) {
                        if (rowCount == 1 && $(this).hasClass("ele-res-sm")) {
                            twoColumn = true;
                        }
                        if (twoColumn && rowCount == 2) {
                            twoColumn = false;
                            $(this).addClass("menos-margin");
                        }
                    } else {
                        switch (MElemento) {
                            case false:
                                MElemento = true;
                                break;
                            case true:
                                MElemento = false;
                                $(this).addClass("menos-margin");
                                break;
                        }
                    }
                }
                rowCount++;
            });
        }
        //orderResult
        orderResult();
        //llamado a funcion con rezise
        $(window).resize(function () {
            orderResult();
        });
        /*Multi Casusel*/
        var numImg = 6;
        $('.carousel-dinamicVM .item').each(function () {
            var itemToClone = $(this);

            for (var i = 1; i < numImg; i++) {
                itemToClone = itemToClone.next();

                // wrap around if at end of item collection
                if (!itemToClone.length) {
                    itemToClone = $(this).siblings(':first');
                }

                // grab item, clone, add marker class, add to collection
                itemToClone.children(':first-child').clone()
                .addClass("cloneditem-" + (i))
                .appendTo($(this));
            }
        });
        /*/Multicarusel*/
