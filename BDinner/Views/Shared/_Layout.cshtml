<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Bdinner</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no" />
    <meta name="description" content="Descripción Bdinner" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="HandheldFriendly" content="True">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/favicon.ico" />
    <link rel="alternate" href="http://www.dominio.com" hreflang="es" />
    <link rel="alternate" href="http://www.dominio.com/en" hreflang="en" />
    <link rel="alternate" href="http://www.dominio.com/en" hreflang="x-default" />
    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/assets/css/base.css">
</head>
<body>
    <!-- div de logo bdinner-->
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="logo text-center">
                    <img src="/assets/img/logo.png" alt="Logo Bdinner" />
                </div>
            </div>
        </div>
    </div>
    <!-- fin de logo-->
    <div class="container">
        <!--Buscador-->
        <script src="~/Scripts/_references.js"></script>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>

        <div class="row buscador">
            <div class="col-xs-12">
                <p>Cambiar Búsqueda</p>
            </div>
            <div class="col-xs-12">
                <form class="form-inline" action="peticionxfiltro()">
                    <div class="form-group">
                        <input type="text" class="form-control" id="wordKeys" max-length="120" onkeypress="return soloLetras(event)" placeholder="Busca Restaurante por Nombre, Zona, Comida...">

                    </div>
                    <div class="form-group">





                        <select class="form-control" id="typeSearch" onchange="ShowSelected()">

                            <option value="Tipo de Comida">Tipo de Comida</option>
                            <option value="Italiana">Italiana</option>
                            <option value="Mexicana">Mexicana</option>
                            <option value="Espanola">Española</option>
                            <option value="Oriental">Oriental</option>

                            <optgroup label="Categoria"></optgroup>

                            <option value="1 Estrella" id="star1">1 Estrella</option>
                            <option value="2 Estrellas" id="star2">2 Estrellas</option>
                            <option value="3 Estrellas" id="star3">3 Estrellas</option>
                            <option value="4 Estrellas" id="star4">4 Estrellas</option>
                            <option value="5 Estrellas" id="star5">5 Estrellas</option>




                        </select>




                    </div>
                    <div class="form-group">
                        <select class="form-control" id="zonaSearch">
                            <option value="Zona" selected disabled hidden>Zona</option>
                            <option value="La Habana">La Habana</option>
                            <option value="Santiago de Cuba">Santiago de Cuba</option>
                            <option value="Trinidad">Trinidad</option>
                            <option value="Santa Clara">Santa Clara</option>
                            <option value="Cienfuegos">Cienfuegos</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="precioSearch">
                            <option value="Precio" selected disabled hidden>Precio</option>
                            <option value="1">$1 - $10</option>
                            <option value="2">$11 - $20</option>
                            <option value="3">$21 - $50</option>
                            <option value="4">$51 - $100</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="divisaSearch">
                            <option value="divisa" selected disabled hidden>Moneda</option>
                            <option value="EUR">Euros</option>
                            <option value="MXN">Pesos Mexicanos</option>
                            <option value="USD">Dolares USA</option>
                        </select>
                    </div>

                    <button type="" class="btn primario" id="btnBuscar" onclick="buscar();">Buscar</button>

                </form>
                <label id="Aux"></label>
            </div>
        </div>
        <!--/Buscador-->
    </div>
    @RenderBody()
    <footer>
        www.Bdinner.com
    </footer>
</body>

</html>
